<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paging"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ibm.pager_testing.Paging">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/two"
        android:layout_marginEnd="15dp">

        <ImageButton
            android:layout_width="wrap_content"
            app2:srcCompat="@drawable/left"
            android:id="@+id/left"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/two"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:layout_height="100dp" />

        <ImageButton
            android:layout_width="wrap_content"
            app2:srcCompat="@drawable/right"
            android:id="@+id/right"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/two"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:layout_height="100dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:id="@+id/RIGHT"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/two">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app2:srcCompat="@drawable/up"
            android:cropToPadding="true"
            android:id="@+id/up" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app2:srcCompat="@drawable/down"
            android:id="@+id/down" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app2:srcCompat="@drawable/record"
            android:cropToPadding="true"
            android:id="@+id/record" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:weightSum="1"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp">

        <EditText
            android:layout_width="455dp"
            android:layout_height="151dp"
            android:maxLength="9"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/nineBit" />
    </LinearLayout>
</RelativeLayout>
