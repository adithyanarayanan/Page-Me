<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3D5E5E"

    tools:context="com.example.ibm.pager_9_10.sign_up">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gen"
        android:layout_toStartOf="@+id/gen"
        android:background="#96A4A4"

        android:layout_marginEnd="76dp"
        android:layout_marginTop="18dp"

        android:id="@+id/validNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/validEmail"
        android:background="#96A4A4"

        android:layout_below="@+id/EL"
        android:layout_toEndOf="@+id/validPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/validPass"
        android:layout_below="@+id/ps"
        android:background="#96A4A4"

        android:layout_alignStart="@+id/validNum" />

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#516E6E"

        android:id="@+id/gen"
        android:layout_alignBaseline="@+id/st"
        android:layout_alignBottom="@+id/st"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#96A4A4"

        android:id="@+id/ps"
        android:hint="Enter preferred Password"
        android:layout_below="@+id/validNum"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Check"
        android:background="#516E6E"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkP"
        android:layout_below="@+id/validNum"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#516E6E"

        android:id="@+id/chkE"
        android:layout_below="@+id/validPass"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#96A4A4"

        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EL"
        android:hint="Enter your Email Address"
        android:layout_alignBottom="@+id/chkE"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate your 9 digit number"
        android:id="@+id/st"
        android:layout_marginTop="94dp"
        android:background="#96A4A4"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/gen"
        android:layout_marginEnd="10dp" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fn"
        android:background="@drawable/checkicon"

        android:layout_below="@+id/validEmail"
        android:layout_toEndOf="@+id/EL"
        android:layout_marginTop="38dp" />


</RelativeLayout>
